<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.magi.iwish.IntroActivity"
    android:id="@+id/full_layout"
    android:background="#36384c">

    <ImageView
        android:id="@+id/star"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtv_name"
        android:layout_marginTop="88dp"
        android:adjustViewBounds="false"
        android:src="@drawable/shootingstar" />

    <TextView
        android:id="@+id/txtv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="I Wish"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imgv_cat1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"
        />

    <ImageView
        android:id="@+id/imgv_cat2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:id="@+id/imgv_cat3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_marginLeft="100dp"
        />
    <ImageView
        android:id="@+id/imgv_cat4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="80dp"
        />

    <ImageView
        android:id="@+id/imgv_cat5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="80dp"/>

    <ImageView
        android:id="@+id/imgv_cat6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="190dp"
        android:layout_marginLeft="60dp"
        />

    <ImageView
        android:id="@+id/imgv_cat7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        />

    <ImageView
        android:id="@+id/imgv_cat8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        />

    <ImageView
        android:id="@+id/imgv_cat9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleX="-1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="30dp"
        />
</RelativeLayout>